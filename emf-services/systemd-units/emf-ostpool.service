[Unit]
Description=EMF OST Pool Service
PartOf=emf-manager.target
Wants=emf-ostpool-sidecar.service
After=emf-ostpool-sidecar.service


[Service]
Type=simple
Environment=RUST_LOG=info,sqlx::query=warn
EnvironmentFile=/etc/emf/bootstrap.conf
EnvironmentFile=-/etc/emf/overrides.conf
ExecStart=/bin/emf-ostpool
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=emf-manager.target
