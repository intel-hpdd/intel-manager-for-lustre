[Unit]
Description=EMF Warp Drive Service
PartOf=emf-manager.target
After=nginx.service
Wants=emf-warp-drive-sidecar.service
After=emf-warp-drive-sidecar.service

[Service]
Type=simple
Environment=RUST_LOG=info,sqlx::query=warn
EnvironmentFile=/etc/emf/bootstrap.conf
EnvironmentFile=-/etc/emf/overrides.conf
ExecStart=/usr/bin/emf-warp-drive
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=emf-manager.target
